<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mocking state: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
    />

    <RadioGroup
            android:id="@+id/radioState"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvState"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        <RadioButton android:id="@+id/stateDisabled"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="Disabled"/>
        <RadioButton android:id="@+id/stateEnabled"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Enabled"/>
        <RadioButton android:id="@+id/stateMixed"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Mixed"/>
        <RadioButton android:id="@+id/stateRecord"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Record"/>
    </RadioGroup>

    <TextView
            android:id="@+id/tvDirectory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving in device's Download directory"
            app:layout_constraintLeft_toLeftOf="@id/radioState"
            app:layout_constraintTop_toBottomOf="@+id/radioState"
            android:enabled="false"
            android:layout_margin="8dp"
    />

    <Button android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvDirectory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Call service"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/results"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCall"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>